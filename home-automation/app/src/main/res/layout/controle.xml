<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30afcc"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:weightSum="1">

    <ImageButton
        android:id="@+id/btnTemperature"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnControl"
        android:layout_marginTop="58dp"
        android:background="#518ff5"
        android:clickable="true"
        android:src="@drawable/temperature" />

    <ImageButton
        android:id="@+id/btnWaterBox"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="71dp"
        android:background="#518ff5"
        app:srcCompat="@drawable/water" />

    <ImageButton
        android:id="@+id/btnControl"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnWaterBox"
        android:background="#518ff5"
        app:srcCompat="@drawable/house" />

    <ImageButton
        android:id="@+id/btnChart"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnTemperature"
        android:background="#518ff5"
        app:srcCompat="@drawable/shower" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:clickable="true"
        app:backgroundTint="?android:attr/colorFocusedHighlight"
        app:srcCompat="@drawable/ic_mic_black_24dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/mic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="#30afcc"
        android:contentDescription="Description"
        android:maxWidth="300dp"
        android:minHeight="300dp"
        android:scaleType="centerInside"
        android:visibility="invisible"
        app:lottie_autoPlay="false"
        app:lottie_fileName="mic_updated.json"
        app:lottie_loop="false" />

    <Switch
        android:id="@+id/outMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Modo saÃ­da  "
        android:textColor="#FFF"
        android:textSize="20sp" />
</RelativeLayout>

